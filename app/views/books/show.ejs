<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.books %>">books</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Details of book</a></li>
</ul>

<div class="page-header">
    <h1>Details of book</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>author</th><td><%= book.author %></td></tr>

        <tr><th>name</th><td><%= book.name %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_book(book), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.book(book), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.books) %>
</div>
